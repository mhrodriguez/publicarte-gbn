{% extends 'base.html.twig' %}

{% block body %}
    <h1>Combinacionitem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ combinacionItem.id }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ combinacionItem.cantidad }}</td>
            </tr>
            <tr>
                <th>Incluido</th>
                <td>{% if combinacionItem.incluido %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('combinacionitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('combinacionitem_edit', { 'id': combinacionItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
