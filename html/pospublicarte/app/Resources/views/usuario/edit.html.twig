{% extends 'baseabc.html.twig' %}

{% block body %}

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">

            <span class="mdl-layout-title">Editar - {{ usuario.username }}</span>

            {{ form_start(edit_form, {'attr': {'onsubmit': 'mostrarProgreso(true); return true;'}} ) }}
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--6-col">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_widget(edit_form.nombre) }}
                        {{ form_label(edit_form.nombre) }}
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--6-col">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_widget(edit_form.apellidos) }}
                        {{ form_label(edit_form.apellidos) }}
                    </div>
                </div>
            </div>

            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_widget(edit_form.email) }}
                        {{ form_label(edit_form.email) }}
                    </div>
                </div>
            </div>

            <div class="mdl-grid">
                <div id="divSucursales" class="mdl-cell mdl-cell--6-col">
                    <label id="lblSucursales" class="mdl-label">
                        {{ edit_form.sucursales.vars.label }}
                    </label>
                    <div>
                        {{ form_widget(edit_form.sucursales) }}
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--6-col">
                    <label id="lblRoles" class="mdl-label">
                        {{ edit_form.roles2.vars.label }}
                    </label>
                    <div>
                        {{ form_widget(edit_form.roles2) }}
                    </div>
                </div>
            </div>

            <div class="mdl-grid">
                <div id="divActivo" class="mdl-cell mdl-cell--6-col">
                    Activo {{ form_widget(edit_form.isActive) }}
                </div>
                <div class="mdl-cell mdl-cell--6-col">
                </div>
            </div>

            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--2-col">
                {% if usuario.firma %}
                <img src="{{ path('imagen_show', {'id' : usuario.firma.id }) }}" style="width: 100%; height: auto;"/>
                {% endif %}
                </div>
                <div class="mdl-cell mdl-cell--10-col">
                    <label id="lblFirma" class="mdl-label">
                        {{ edit_form.firmaimagen.vars.label }}
                    </label>
                    <div>
                        {{ form_widget(edit_form.firmaimagen) }}
                    </div>
                </div>
            </div>

            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--2-col">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Guardar</button>
                </div>

                <div class="mdl-cell mdl-cell--1-col">
                    <a href="{{ path('usuario_index', {}) }}" class="mdl-button mdl-js-button mdl-button--raised" style="margin-left:1em">Cancelar</a>
                </div>

            </div>
            {{ form_end(edit_form) }}

            <div>
                {{ form_errors(edit_form.nombre) }}
                {{ form_errors(edit_form.apellidos) }}
                {{ form_errors(edit_form.email) }}
                {{ form_errors(edit_form.sucursales) }}
                {{ form_errors(edit_form.roles2) }}
            </div>

            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col">
                    <a href="{{ path('usuario_changepassword', {'idUsuario': usuario.id }) }}">Cambiar Password</a>
                </div>
            </div>

        </div>
    </div>

    <script>
        $('form input').addClass('mdl-textfield__input')
        $('form label').addClass('mdl-textfield__label')

        document.getElementById('usuario_email').required=false;
        document.getElementById('usuario_isActive').required=false;

        $('#usuario_sucursales input').removeClass('mdl-textfield__input');
        $('#usuario_sucursales label').removeClass('mdl-textfield__label');

        $('#usuario_roles2 input').removeClass('mdl-textfield__input');
        $('#usuario_roles2 label').removeClass('mdl-textfield__label');

        $('#lblSucursales').removeClass('mdl-textfield__label');
        $('#lblRoles').removeClass('mdl-textfield__label');
        $('#lblFirma').removeClass('mdl-textfield__label');
    </script>

    <style>

    </style>

{% endblock %}
