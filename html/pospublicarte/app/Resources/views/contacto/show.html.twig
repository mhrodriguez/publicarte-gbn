{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contacto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contacto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ contacto.nombre }}</td>
            </tr>
            <tr>
                <th>Puesto</th>
                <td>{{ contacto.puesto }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ contacto.correo }}</td>
            </tr>
            <tr>
                <th>Correofacturacion</th>
                <td>{{ contacto.correofacturacion }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ contacto.telefono }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if contacto.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contacto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contacto_edit', { 'id': contacto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
