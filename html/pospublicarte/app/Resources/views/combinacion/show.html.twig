{% extends 'base.html.twig' %}

{% block body %}
    <h1>Combinacion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ combinacion.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ combinacion.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if combinacion.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('combinacion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('combinacion_edit', { 'id': combinacion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
