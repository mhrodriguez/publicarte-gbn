{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mesa</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mesa.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ mesa.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if mesa.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mesa_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mesa_edit', { 'id': mesa.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
