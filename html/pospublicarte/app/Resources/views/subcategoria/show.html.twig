{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subcategorium</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subcategorium.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ subcategorium.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if subcategorium.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subcategoria_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subcategoria_edit', { 'id': subcategorium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
