{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pago</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pago.id }}</td>
            </tr>
            <tr>
                <th>Concepto</th>
                <td>{{ pago.concepto }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ pago.monto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if pago.fecha %}{{ pago.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Validado</th>
                <td>{% if pago.validado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if pago.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pago_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pago_edit', { 'id': pago.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
